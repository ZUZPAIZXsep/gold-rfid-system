<%-  include('header') %>

<div class="text-center h3 text-info"></div>

<% if (errorMessage) { %>
  <script>
    alert('<%= errorMessage %>');
  </script>
  <% } %>

<form method="post" action="/login" class="login-form">
    <div class="card mt-3">
        <div class="card-body">
            <div class="card-title h4">
                <span class="material-symbols-outlined material-icons">
                    key
                </span>
                ระบบตรวจนับทองคำรูปพรรณ
            </div>
            <div class="mt-3">Username</div>
            <div><input name="usr" id="usr" type="text" class="form-control" required /></div>
            <div class="mt-3">Password</div>
            <div><input name="pwd" id="pwd" type="password" class="form-control" required /></div>
            <div class="mt-3">
                <button type="submit" class="btn btn-info">
                    <span class="material-symbols-outlined material-icons">
                        login
                    </span>
                    Login
                </button>
            </div>
        </div>
    </div>
</form>

<%-  include('footer') %>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
