<%- include('header') %>

<div class="container mt-5">
  <h2>แก้ไขข้อมูลผู้ใช้</h2>
  <form action="/edit_user/<%= user._id %>" method="POST" style="width: 30%;">
    <div class="mb-3">
      <label for="name" class="form-label">ชื่อพนักงาน</label>
      <input type="text" class="form-control" id="name" name="name" value="<%= user.name %>" required>
    </div>
    <div class="mb-3">
      <label for="usr" class="form-label">ชื่อในระบบ</label>
      <input type="text" class="form-control" id="usr" name="usr" value="<%= user.usr %>" required>
    </div>
    <div class="mb-3">
      <label for="newPwd" class="form-label">รหัสผ่านใหม่ (ถ้าต้องการเปลี่ยน)</label>
      <input type="password" class="form-control" id="newPwd" name="newPwd" placeholder="ใส่รหัสผ่านใหม่">
    </div>
    <div class="mb-3">
      <label for="confirmPwd" class="form-label">ยืนยันรหัสผ่านใหม่</label>
      <input type="password" class="form-control" id="confirmPwd" name="confirmPwd" placeholder="ยืนยันรหัสผ่านใหม่">
    </div>
    <div class="mb-3">
      <label for="role" class="form-label">ตำแหน่ง</label>
      <select class="form-select" id="role" name="role" required>
        <option value="Owner" <%= user.role === 'Owner' ? 'selected' : '' %>>Owner</option>
        <option value="Employee" <%= user.role === 'Employee' ? 'selected' : '' %>>Employee</option>
      </select>
    </div>
    <div class="mb-3">
      <label for="phone" class="form-label">โทรศัพท์</label>
      <input type="text" class="form-control" id="phone" name="phone" value="<%= user.phone %>" required>
    </div>
    <div class="mb-3">
      <label for="email" class="form-label">อีเมล</label>
      <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>" required>
    </div>
    <button type="submit" class="btn btn-primary">บันทึกการเปลี่ยนแปลง</button>
    <a href="/home" class="btn btn-secondary">ยกเลิก</a>
  </form>
</div>

<%- include('footer') %>
