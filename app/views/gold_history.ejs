<%- include('header') %>

<form method="GET">
    <div class="container-fluid mt-3">
        <div style="display: flex; justify-content: space-between; align-items: center;">
            <h3 style="font-weight: bold;">ประวัติทองคำในแต่ละวัน</h3>
            <a type="button" class="btn btn-success" style="margin-left: 4px;" href="/gold_sales">
                <span class="material-icon material-symbols-outlined">shopping_cart</span> ไปยังหน้าการขาย
            </a>
        </div> 
        <div class="row">
            <div class="row mt-1">
                <div class="col-2">
                    <label for="start_date_input" style="font-weight: 600;">เลือกวันที่เริ่มต้น</label>
                    <input type="date" class="form-control" id="start_date_input" name="start_date" value="<%= startDate %>" placeholder="เลือกวันที่เริ่มต้น">
                </div>
                <div class="col-2">
                    <label for="end_date_input" style="font-weight: 600;">ถึงวันที่</label>
                    <input type="date" class="form-control" id="end_date_input" name="end_date" value="<%= endDate %>" placeholder="ถึงวันที่">
                </div>
            </div> 
        </div>       
        <div>
            <button type="submit" class="btn btn-primary mt-3">
                <span class="material-icon material-symbols-outlined">
                    search
                </span>
                ค้นหา
            </button>
            <a type="button" class="btn btn-danger mt-3" style="margin-left: 4px;" href="./gold_history">
                <span class="material-icon material-symbols-outlined">
                    close
                </span>
                ล้างค่า
            </a>
        </div>
        <div class="mt-3">
            <% if (aggregatedRecords.length > 0) { %>
                <table class="table table-bordered mt-3">
                    <thead class="table-success">
                        <tr>
                            <th width="200px">วันที่</th>
                            <th width="260px">จำนวนทองคำคงเหลือในวันนี้ (รายการ)</th>
                            <th width="200px">ดูรายละเอียด</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% aggregatedRecords.forEach(record => { %>
                            <tr>
                                <td><%= dayjs(record._id).locale('th').format('DD-MM-YYYY') %></td>
                                <td style="text-align: center;"><%= record.totalInStock %></td>
                                <td style="text-align: center;">
                                    <button type="button" class="btn btn-primary" onclick="showDetails('<%= record._id %>')">ดูรายละเอียด</button>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% } else { %>
                <p>ไม่มีข้อมูลทองคำตรงกับเงื่อนไขที่คุณเลือก</p>
            <% } %>
        </div>
    </div>
</form>

<!-- Modal สำหรับแสดงรายละเอียด -->
<div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailsModalLabel">รายละเอียดทองคำ</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <table class="table table-bordered">
                    <thead class="table-secondary">
                        <tr>
                            <th>ชนิด</th>
                            <th>ขนาด</th>
                            <th>น้ำหนัก</th>
                            <th>Gold_Tag_id</th>
                            <th>สถานะ</th>
                        </tr>
                    </thead>
                    <tbody id="detailsTableBody">
                        <!-- รายการจะถูกแทรกที่นี่ -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<%- include('footer') %>

<script>
    function showDetails(date) {
        // หา record ที่ตรงกับวันที่ที่ต้องการ
        const record = JSON.parse('<%- JSON.stringify(aggregatedRecords) %>').find(r => r._id === date);
        const tableBody = document.getElementById('detailsTableBody');
        tableBody.innerHTML = '';

        // เพิ่มข้อมูลทองคำลงใน modal
        if (record && record.goldRecords) {
            record.goldRecords.forEach(gold_history => {
                const row = `<tr>
                    <td>${gold_history.gold_type}</td>
                    <td>${gold_history.gold_size}</td>
                    <td>${gold_history.gold_weight} กรัม</td>
                    <td>${gold_history.gold_id}</td>
                    <td>${gold_history.gold_status === 'in stock' ? 'ยังไม่ถูกขาย' : (gold_history.gold_status === 'ready to sell' ? 'นำออกมาขาย' : 'ขายออกแล้ว')}</td>
                </tr>`;
                tableBody.innerHTML += row;
            });
        }

        // แสดง modal
        new bootstrap.Modal(document.getElementById('detailsModal')).show();
    }
</script>


