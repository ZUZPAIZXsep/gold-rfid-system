        background-color: #007bff;
        color: #ffffff;
    }
    .color-nextpage {
        background-color: #007bff; /* สีเน้นของหน้าปัจจุบัน */
        color: #ffffff; /* สีข้อความของหน้าปัจจุบัน */
    }
    .color-previouspage {
        background-color: #f88379; /* สีเน้นของหน้าปัจจุบัน */
        color: #ffffff; /* สีข้อความของหน้าปัจจุบัน */
    }
</style>
