<%- include('header') %>

<div class="container-fluid mt-3">

    <form method="POST" action="/add_dataform">
        <div class="mt-3">
            <label>Gold_Tag_id</label>
            <div class="col-3 mt-1">
                <input type="text" name="gold_id" value="<%= goldId %>" class="form-control" readonly/>
            </div>
        </div>
        <div class="mt-3">
            <label>ชนิด</label>
            <div class="col-3">
                <select name="gold_type" class="form-select">
                    <option selected>เลือกประเภททองคำ</option>
                    <option value="สร้อยคอ">สร้อยคอ</option>
                    <option value="แหวน">แหวน</option>
                    <option value="กำไลข้อมือ">กำไลข้อมือ</option>
                    <option value="สร้อยข้อมือ">สร้อยข้อมือ</option>
                    <option value="ต่างหู">ต่างหู</option>
                </select>
            </div>
        </div>
        <div class="mt-3">
            <label>ขนาด</label>
            <div class="col-3">
                <select name="gold_size" id="gold_size" class="form-select" onchange="updateWeight()">
                    <option selected>เลือกขนาดทองคำ</option>
                    <option value="ครึ่งสลึง">ครึ่งสลึง</option>
                    <option value="1 สลึง">1 สลึง</option>
                    <option value="2 สลึง">2 สลึง</option>
                    <option value="1 บาท">1 บาท</option>
                    <option value="2 บาท">2 บาท</option>
                    <option value="3 บาท">3 บาท</option>
                </select>
            </div>
        </div>
        <div class="mt-3">
            <label>น้ำหนัก</label>
            <div class="col-3">
                <div class="input-group">
                    <input id="gold_weight" name="gold_weight" class="form-control" readonly>
                    <span class="input-group-text">กรัม</span>
                </div>
            </div>
        </div>
        <div class="mt-3">
            <label>ตัวแทนจำหน่ายที่รับมาขาย</label>
            <div class="col-3">
                <select name="gold_dealer" id="gold_dealer" class="form-select">
                    <option selected>เลือกร้านตัวแทนจำหน่ายที่รับมาขาย</option>
                    <option value="dealer_1">ร้าน A</option>
                    <option value="dealer_2">ร้าน B</option>
                    <option value="dealer_3">ร้าน C</option>
                </select>
            </div>
        </div>         
        <div class="mt-4">
            <button type="submit" class="btn btn-success" style="margin-right: 3px;">
                <span class="material-icon material-symbols-outlined">
                    save
                </span>
                บันทึก
            </button>
            <a href="./add_golddata" class="btn btn-danger">
                <span class="material-icon material-symbols-outlined">
                    undo
                </span>
                ย้อนกลับ
            </a> 
        </div>
    </form>
</div>

<%- include('footer') %>

<script>
    function updateWeight() {
        var sizeSelect = document.getElementById('gold_size');
        var weightInput = document.getElementById('gold_weight');
        var sizeValue = sizeSelect.value;
        switch(sizeValue) {
            case 'ครึ่งสลึง':
                weightInput.value = '1.9';
                break;
            case '1 สลึง':
                weightInput.value = '3.8';
                break;
            case '2 สลึง':
                weightInput.value = '7.6';
                break;
            case '1 บาท':
                weightInput.value = '15.16';
                break;
            case '2 บาท':
                weightInput.value = '30.4';
                break;
            case '3 บาท':
                weightInput.value = '45.6';
                break;
            default:
                weightInput.value = '';
        }
    }
</script>
